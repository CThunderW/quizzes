<%- include("../partials/header") %> 

<h1>🐓 NEW CLUCK 🐓</h1>

<% if (username) { %>

<form action="/clucks" method="POST">

<div class="form-group">
  <textarea
    class="form-control"
    name="content"
    cols="60"
    rows="5"
    placeholder="content"></textarea>
</div>

  <div class="form-group">
    <input
      type="text"
      class="form-control"
      name="image_url"
      placeholder="e.g. http://imgur.com/myPic.jpg">
  </div>

  <input type="submit" value="Submit" class="btn btn-outline-success">
</form>
<% } else { %>
<h1><a href="/clucks">Please sign in to post to Cluckr</a></h1>
<% } %> 

